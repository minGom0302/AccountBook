<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/reCaLi_layout"
    android:background="@drawable/background_rectangle02"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5">
        <TextView
            android:id="@+id/reCaLi_contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:maxLines="1"
            android:ellipsize="end" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reCali_infoBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_click01"
            android:scaleType="fitCenter"
            android:layout_gravity="center|end"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/light_blue02"/>

    <TextView
        android:id="@+id/reCaLi_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textAlignment="center" />

</LinearLayout>