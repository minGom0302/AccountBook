<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:color="@color/light_blue01"
                        android:width="1dp"/>
                    <padding
                        android:right="12dp"
                        android:left="12dp"/>
                    <corners
                        android:radius="4dp"/>
                    <solid
                        android:color="@color/white"/>
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_arrow_down"
                android:gravity="end"/>
        </layer-list>
    </item>
</selector>